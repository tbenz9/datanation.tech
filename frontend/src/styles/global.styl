@require "vars";
@require "typeography";

* {
	box-sizing: border-box;
}

html, body {
	width: 100%;
	height: 100%;
	margin: 0;
	padding: 0;
	font-size: 14px;
	font-weight: 300;
	color: rgba(0, 0, 0, 0.84);
	background-color: bg;
	font-family: -apple-system, system-ui, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
	-webkit-font-smoothing: antialiased;
	overflow: hidden;
}

a {
	display: inline-block;
	color: primary;
	text-decoration: none;

	&:hover, &:active, &:focus {
		text-decoration: underline;	
	}
}

.page {
	position: absolute;
	top: 0;
	left: 0;
	right: 0;
	bottom: 0;
	width: 100%;
	height: 100%;
	padding-top: 60px;
	overflow-x: hidden;
	overflow-y: auto;

	@media screen and (min-width: 767px) {
		padding-top: 0;	
	}
}